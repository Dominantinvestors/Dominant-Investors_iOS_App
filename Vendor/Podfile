source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '10.0'

inhibit_all_warnings!
use_frameworks!

project '../project/DominantInvestors'
workspace '../DominantInvestors.xcworkspace'

target :DominantInvestors do
    pod 'ObjectMapper'
    pod 'AlamofireObjectMapper'
    pod 'AlamofireImage'
    pod 'MBProgressHUD'
    pod 'FacebookCore'
    pod 'FacebookLogin'
    pod 'FacebookShare'
    pod 'AFDateHelper', '~> 4.2.2'
    pod 'MessageKit'
    pod 'MessageInputBar'
end

target :DominantCrypto do
    pod 'ObjectMapper'
    pod 'AlamofireObjectMapper'
    pod 'AlamofireImage'
    pod 'MBProgressHUD'
    pod 'FacebookCore'
    pod 'FacebookLogin'
    pod 'FacebookShare'
    pod 'AFDateHelper', '~> 4.2.2'
    pod 'MessageKit'
    pod 'MessageInputBar'
end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |configuration|
            if ['AlamofireImage'].include? target.name
                configuration.build_settings['SWIFT_VERSION'] = "3.2"
            end
            if target.name == 'MessageKit'
                target.build_configurations.each do |config|
                    config.build_settings['SWIFT_VERSION'] = '4.0'
                end
            end
        end
    end
end
